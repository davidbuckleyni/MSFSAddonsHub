@model MSFSClubManager.Dal.ViewModels.UserViewModel

@{

    Layout = "~/Themes/Dashboard/_BlankPopupLayout.cshtml";
}
<form asp-action="Submit">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="User.Id" />

    <div class="form-group">
        <input asp-for="User.FirstName" placeholder="Name" class="form-control" />
        <span asp-validation-for="User.FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input asp-for="User.LastName " placeholder="Last Name" class="form-control" />
        <span class="text-danger"></span>
    </div>

    <div class="form-group">
        <input id="password" placeholder="Password" class="form-control" />
        <span class="text-danger"></span>
    </div>


    <div class="form-group">
        <input id="password" placeholder="Confirm Password" class="form-control" />
        <span class="text-danger"></span>
    </div>

    <div class="form-group">
        <input id="password" placeholder="Club Assign" class="form-control" />
        <span class="text-danger"></span>
    </div>

    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    </div>


</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}