@model MSFSClubManager.Dal.ViewModels.ClubViewModel

@{

    Layout = "~/Themes/Dashboard/_BlankPopupLayout.cshtml";
}
<form asp-action="Submit">
    <div asp-validation-summary="All" class="text-danger"></div>        
    <input type="hidden" asp-for="Club.Id" />

    <div class="form-group">        
        <input asp-for="Club.Name" placeholder="Name" class="form-control" />
        <span asp-validation-for="Club.Name"  class="text-danger"></span>
    </div>


    <div class="form-group">        
        <input asp-for="Club.Description" placeholder="Description"  class="form-control" />
        <span asp-validation-for="Club.Description" class="text-danger"></span>
    </div>

    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    </div>


</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}