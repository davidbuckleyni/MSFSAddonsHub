@model MSFSClubManager.Dal.Models.Flight

@{

    Layout = "~/Themes/Dashboard/_BlankPopupLayout.cshtml";
}
<form asp-action="Submit">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <input asp-for="Name" placeholder="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="Description" placeholder="End Date" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="StartDate" placeholder="Start Date" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input asp-for="EndDate" placeholder="End Date" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    

    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    </div>


</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}